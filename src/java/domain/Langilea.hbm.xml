<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="domain.Langilea" table="langilea">
        <id name="gz" type="java.lang.Integer">
            <column name="LangGZ" />
            <generator class="foreign">
                    <param name="property">pertsona</param>
            </generator>
        </id>
        <one-to-one name="pertsona" class="domain.Langilea" constrained="true"></one-to-one>
        <property name="erabiltzailea" type="string">
            <column name="Erabiltzailea" length="15" not-null="true" />
        </property>
        <property name="pasahitza" type="string">
            <column name="Pasahitza" length="15" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
